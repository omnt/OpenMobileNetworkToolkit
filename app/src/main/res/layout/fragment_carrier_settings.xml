<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carrier_settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/carrier_settings_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Carrier Settings"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_apply_carrier_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/apply_carrier_settings" />

    <TextView
        android:id="@+id/current_settings_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="@string/current_carrier_settings_text" />

    <ScrollView
        android:id="@+id/carrier_settings_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />

</LinearLayout>